<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_medical_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".userprofile.fragment.MedicalHistoryFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <Button
                android:id="@+id/btn_add_medical_history"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="#dedcf2"
                android:text="병력 추가"
                android:textStyle="bold"
                android:textColor="#255cea"/>

        <EditText
                android:id="@+id/et_add_history"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:visibility="invisible"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_user_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>
</LinearLayout>