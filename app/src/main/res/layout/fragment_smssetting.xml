<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".userprofile.fragment.SMSSettingFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_sms_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="@string/sms_contents"/>

        <Button
                android:id="@+id/btn_add_medical_history_sms_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_medical_history"
                android:layout_marginLeft="100dp"
                android:layout_alignBaseline="@id/tv_sms_contents"
                android:layout_toEndOf="@id/tv_sms_contents"/>
    </RelativeLayout>

    <EditText
            android:id="@+id/et_sms_contents"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>